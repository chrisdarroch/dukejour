!!! Strict
%html{html_attrs('en')}
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title== Dukejour
    = stylesheet_link_tag 'styles'

    -# TODO http://code.google.com/apis/ajaxlibs/documentation/
    = javascript_include_tag 'jquery', 'jquery-ui', 'hammock', 'suggest', 'jquery.json', 'juggernaut', 'jquerynaut', 'swfobject', :cache => true
    = juggernaut :channels => ['dukejour'], :debug => false, :host => 'dukejour'
    = javascript_tag yield :javascript
  %body
    #world
      #main
        = yield
      #wr_footer
        #footer
          %ul.messages
            %li.dummy{:style => 'display: none;'}
          .copy_and_info
            = render :partial => 'libraries/info'
            .copy
              by
              = link_to '@glenmaddern', 'http://twitter.com/glenmaddern'
              and
              = link_to '@ben_h', 'http://twitter.com/ben_h'
